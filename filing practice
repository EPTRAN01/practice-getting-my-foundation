import csv

def input_user():
    city = input("please enter a city: ")
    month = input("Please enter a month: ")
    return(city, month)

def weather_temp(city, month):  #the whole function gets me the for loop that goes down each row, then if the condition is true it will print the value and close the file
    with open("weather_temps (3).csv", "r") as f: #reader
        lines = f.readlines()
        for line in lines:  #for loop for the whole list
            row = line.strip().split(",")  #this gives me ['city', 'month', 'high', 'low'], if i wanted to create a dictionary i can create a dict making :city": to the actual row[i] value/ but its the same thing as row[i]
            if row[0].lower() == city.lower() and row[1].lower() == month.lower():
                print("The average high is:", row[2], "and the average low is:", row[3])
        f.close()





city, month = input_user()
weather_temp(city, month)
