def user_input():

    nums = []
    while True: #infinite loop
        entry = input("enter a numbers(type 'done'): ")
        if entry == 'done':
            target = input("target number?: ")
            break
        nums.append(int(entry)) #should be able to add to the list nums[]
    return nums, int(target) #returns the list and target number needed

def function(nums, target):
    for i in range(len(nums)): #the for loops repeats for the length of the list using the len function
        for j in range(i + 1, len(nums)): #nested for loop for the approach as two numbers needed to be increased
            if nums[i] + nums[j] == target:
                return (nums[i], nums[j]) #returns a tuple (i, j)
    return None


if __name__ == '__main__':
    nums, target = user_input()
    result = function(nums, target)
    if result:
        print(f"pair: {result[0]} + {result[1]} = {target}") #since im returning a tuple i have to get the two values through this
    else:
        print("no match found")
